{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "yarn clean && lerna bootstrap",
    "clean": "lerna clean --yes",
    "compile:core": "lerna run compile --scope=@evilfactory/anggun-core --stream",
    "compile:core:watch": "lerna run compile:watch --scope=@evilfactory/anggun-core --stream",
    "build:docs": "yarn compile:core && lerna run build --parallel",
    "dev:docs": "yarn workspace cra start",
    "test:docs": "yarn workspace cra test",
    "storybook": "lerna run storybook --scope=cra --stream"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.2.0",
    "rollup-plugin-babel": "^4.4.0"
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "**/**/**/*.+(js|json|jsx|mdx|md)": [
      "prettier --write",
      "git add "
    ]
  },
  "dependencies": {
    "lint-staged": "^10.0.8"
  }
}
